---
import WebLayout from "./_components/layouts/web-layout/index.astro";
import { getLangFromUrl, useTranslations } from "../../i18n";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const { title, description } = Astro.props;
---

<WebLayout title={title || t("404.title")}>
  <div class="container mx-auto py-32 px-4 text-center">
    <div class="max-w-md mx-auto">
      <h1 class="text-9xl font-black text-primary mb-4 opacity-20">404</h1>
      <h2 class="text-3xl font-bold mb-4">{title || t("404.heading")}</h2>
      <p class="text-muted-foreground mb-12">
        {description || t("404.description")}
      </p>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a
          href={`/${lang}`}
          class="px-8 py-3 bg-primary text-black font-bold rounded-lg hover:translate-y-[-2px] transition-transform"
        >
          {t("404.back_home")}
        </a>
        <a
          href={`/${lang}/contact`}
          class="px-8 py-3 border border-border bg-card font-bold rounded-lg hover:bg-muted transition-colors"
        >
          {t("404.contact_support")}
        </a>
      </div>
    </div>
  </div>
</WebLayout>
