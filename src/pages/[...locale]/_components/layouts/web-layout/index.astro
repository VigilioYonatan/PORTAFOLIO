---
import { ClientRouter } from "astro:transitions";
import "@pages/_main.ts";
import "@assets/css/global.css";
import { getLangFromUrl, useTranslations } from "@src/i18n";
import TerminalLogo from "../../TerminalLogo";
import NavLinks from "../../NavLinks";
import NeuroPlayer from "../../NeuroPlayer";
import SystemStats from "../../SystemStats";
import TechThemeSwitcher from "@components/extras/TechThemeSwitcher";
import LanguageSwitcher from "@components/extras/LanguageSwitcher";
import FloatingActionChat from "../../FloatingActionChat";
import ProtostarOverlay from "../../special/ProtostarOverlay";
import NatureOverlay from "../../special/NatureOverlay";
import AI_AssistantButton from "../../AI_AssistantButton";
import PlanetOverlay from "../../special/PlanetOverlay";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const {
  title = t("metadata.home.title"),
  description = t("metadata.home.description"),
} = Astro.props;
---

<!doctype html>
<html lang={lang} class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <ClientRouter />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;700;800&family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <style is:global>
      html,
      body {
        height: 100%;
        overflow: hidden;
      }
      body {
        display: flex;
        flex-direction: row; /* 3-column layout */
      }
    </style>
  </head>
  <body
    class="bg-background text-foreground antialiased selection:bg-primary/30 selection:text-primary-foreground min-h-screen w-full flex overflow-hidden"
  >
    {/* Background Grid Accent */}
    <div
      class="fixed inset-0 bg-[url('/grid.svg')] opacity-[0.03] pointer-events-none -z-20"
    >
    </div>

    {/* LEFT SIDEBAR */}
    <aside
      class="w-64 border-r border-white/5 bg-black/40 backdrop-blur-xl flex flex-col shrink-0 z-40 relative group"
    >
      <div class="h-20 flex items-center px-6">
        <TerminalLogo className="text-xl" />
      </div>

      <nav class="flex-1 overflow-y-auto px-2 py-4 thin-scrollbar">
        <NavLinks lang={lang} vertical client:load />
      </nav>

      {/* Decorative Sidebar Info */}

      <div class="p-2 border-t border-white/5 bg-zinc-950/20">
        <NeuroPlayer client:only="preact" transition:persist />
      </div>

      <div
        class="p-4 border-t border-white/5 bg-zinc-950/40 flex flex-col gap-4"
      >
        {/* Controls Area */}
        <div class="flex items-start justify-between gap-4">
          <div class="flex-1">
            <LanguageSwitcher client:load />
          </div>
          <div>
            <TechThemeSwitcher client:load />
          </div>
        </div>
      </div>
    </aside>

    {/* MAIN CONTENT AREA */}
    <main class="flex-1 relative flex flex-col overflow-hidden">
      {/* Dynamic Scanline Overlay */}
      <div
        class="absolute inset-0 bg-scanline opacity-[0.03] pointer-events-none z-10"
      >
      </div>

      <div
        class="flex-1 overflow-y-auto relative scroll-smooth thin-scrollbar custom-scrollbar"
      >
        <slot />
      </div>
    </main>

    {/* RIGHT SIDEBAR */}
    <aside
      class="w-80 border-l border-white/5 bg-black/40 backdrop-blur-xl flex flex-col shrink-0 z-40"
    >
      <div
        class="h-20 flex items-center justify-between px-6 border-b border-white/5"
      >
        <div class="flex flex-col">
          <span
            class="text-[8px] text-muted-foreground uppercase tracking-[0.3em]"
            >Location</span
          >
          <span class="text-[10px] text-foreground font-mono"
            >NEO_TOKYO_SERVER_04</span
          >
        </div>
        <div class="flex flex-col items-end">
          <span
            class="text-[8px] text-muted-foreground uppercase tracking-[0.3em]"
            >Encryption</span
          >
          <span class="text-[10px] text-primary font-mono">AES-256-GCM</span>
        </div>
      </div>

      <div class="flex-1 overflow-y-auto p-4 space-y-6 thin-scrollbar">
        <SystemStats client:load transition:persist />

        <div class="space-y-2">
          {/* Quick Stats Cards */}
          <div
            class="p-4 border border-white/5 bg-primary/5 rounded-sm hover:bg-primary/10 transition-colors group"
          >
            <div class="flex items-center gap-3 mb-2">
              <div
                class="p-1.5 bg-primary/20 rounded-sm text-primary group-hover:scale-110 transition-transform"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="14"
                  height="14"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  ><rect x="2" y="3" width="20" height="14" rx="2" ry="2"
                  ></rect><line x1="8" y1="21" x2="16" y2="21"></line><line
                    x1="12"
                    y1="17"
                    x2="12"
                    y2="21"></line></svg
                >
              </div>
              <span
                class="text-[11px] font-bold tracking-widest text-foreground"
                >Scalability</span
              >
            </div>
            <p
              class="text-[9px] text-muted-foreground/80 leading-relaxed uppercase tracking-widest"
            >
              Kubernetes / Distributed
            </p>
          </div>

          <div
            class="p-4 border border-white/5 bg-zinc-900/40 rounded-sm hover:bg-zinc-900/60 transition-colors group"
          >
            <div class="flex items-center gap-3 mb-2">
              <div
                class="p-1.5 bg-indigo-500/20 rounded-sm text-indigo-400 group-hover:scale-110 transition-transform"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="14"
                  height="14"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  ><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"
                  ></path></svg
                >
              </div>
              <span
                class="text-[11px] font-bold tracking-widest text-foreground"
                >Security</span
              >
            </div>
            <p
              class="text-[9px] text-muted-foreground/80 leading-relaxed uppercase tracking-widest"
            >
              Zero-Trust / OAuth2
            </p>
          </div>

          <div
            class="p-4 border border-white/5 bg-zinc-900/40 rounded-sm hover:bg-zinc-900/60 transition-colors group"
          >
            <div class="flex items-center gap-3 mb-2">
              <div
                class="p-1.5 bg-emerald-500/20 rounded-sm text-emerald-400 group-hover:scale-110 transition-transform"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="14"
                  height="14"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  ><path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"></path></svg
                >
              </div>
              <span
                class="text-[11px] font-bold tracking-widest text-foreground"
                >Performance</span
              >
            </div>
            <p
              class="text-[9px] text-muted-foreground/80 leading-relaxed uppercase tracking-widest"
            >
              WASM / WebGL
            </p>
          </div>
        </div>
      </div>

      <div class="p-4 border-t border-white/5 bg-zinc-950/20">
        <AI_AssistantButton client:only="preact" transition:persist />
      </div>
    </aside>
    <FloatingActionChat client:only="preact" transition:persist />
    <ProtostarOverlay client:only="preact" transition:persist />
    <NatureOverlay client:only="preact" transition:persist />
    <PlanetOverlay client:only="preact" transition:persist />
  </body>
</html>
