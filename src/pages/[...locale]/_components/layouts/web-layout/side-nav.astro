---
import { getLangFromUrl } from "@src/i18n";
import ActiveUsersStat from "@components/extras/active-users-stat";
import {
  House,
  FolderGit2,
  BookOpen,
  GitBranch,
  Mail,
  Terminal,
} from "@lucide/astro";

const lang = getLangFromUrl(Astro.url);

const navItems = [
  { label: "/HOME", href: "/", icon: House },
  { label: "/PROJECTS", href: "/projects", icon: FolderGit2 },
  { label: "/BLOG_LOG", href: "/blog", icon: BookOpen },
  { label: "/EXP_TREE", href: "/experience", icon: GitBranch },
  { label: "@/CONTACT", href: "/contact", icon: Mail },
];

const currentPath = Astro.url.pathname;
const isActive = (href: string) => {
  if (href === "/" && currentPath === `/${lang}/`) return true;
  if (href === "/" && currentPath === "/") return true;
  return currentPath.includes(href) && href !== "/";
};
---

<nav class="flex flex-col w-full gap-2 px-4 py-8 h-full">
  <div class="mb-8 pl-4">
    <a
      href={`/${lang}`}
      class="group flex items-center gap-2 text-primary hover:text-primary-foreground transition-colors"
    >
      <Terminal class="w-8 h-8" />
      <div class="flex flex-col">
        <span class="font-bold text-lg tracking-wider">&lt;DEV_TERM/&gt;</span>
        <span class="text-[10px] text-zinc-500 group-hover:text-primary/70"
          >AUTH: ADMIN</span
        >
      </div>
    </a>
  </div>

  <div class="flex flex-col gap-4 flex-1 overflow-y-auto thin-scrollbar">
    {
      navItems.map((item) => (
        <a
          href={`/${lang}${item.href === "/" ? "" : item.href}`}
          class:list={[
            "flex items-center gap-4 px-4 py-3 rounded-r-full text-sm font-medium transition-all duration-300 border-l-2",
            isActive(item.href)
              ? "border-primary bg-primary/10 text-primary shadow-[0_0_15px_rgba(0,255,157,0.1)]"
              : "border-transparent text-zinc-500 hover:text-zinc-300 hover:bg-white/5 hover:border-zinc-700",
          ]}
        >
          <item.icon class="w-5 h-5" />
          <span class="tracking-widest">{item.label}</span>
        </a>
      ))
    }
  </div>

  <div class="mt-auto px-4 pt-4">
    <div class="p-4 rounded-xl bg-zinc-900/50 border border-zinc-800 space-y-4">
      {/* Active Users */}
      <ActiveUsersStat client:visible />

      <div>
        <div class="flex justify-between items-center mb-2">
          <span class="text-[10px] text-zinc-500 font-mono">SYS_INTEGRITY</span>
          <span class="text-[10px] text-primary font-mono">100%</span>
        </div>
        <div class="w-full h-1 bg-zinc-800 rounded-full overflow-hidden">
          <div class="h-full bg-primary w-full animate-pulse"></div>
        </div>
      </div>

      <div>
        <div class="flex justify-between items-center mb-2">
          <span class="text-[10px] text-zinc-500 font-mono">NET_LATENCY</span>
          <span class="text-[10px] text-emerald-400 font-mono">12ms</span>
        </div>
        <div class="w-full h-1 bg-zinc-800 rounded-full overflow-hidden">
          <div class="h-full bg-emerald-400 w-[12%]"></div>
        </div>
      </div>
    </div>
  </div>
</nav>
