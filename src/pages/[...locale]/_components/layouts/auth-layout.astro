---
import { ClientRouter } from "astro:transitions";
import "@pages/_main.ts";
import { getLangFromUrl } from "@src/i18n";
import "@assets/css/global.css";
import * as env from "astro:env/server";
const lang = getLangFromUrl(Astro.url);
const { title } = Astro.props;
---

<!doctype html>
<html lang={lang} class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title || "Authentication | IntelliDoc AI"}</title>
    <ClientRouter />
    <script define:vars={{ STORAGE_URL: env.STORAGE_URL, NAME_APP: env.NAME_APP, VAPID_PUBLIC_KEY: env.VAPID_PUBLIC_KEY, NODE_ENV: env.NODE_ENV, PUBLIC_URL: env.PUBLIC_URL }} is:inline>
      window.env = {
        STORAGE_URL,
       NAME_APP,
       VAPID_PUBLIC_KEY,
       NODE_ENV,
       PUBLIC_URL
      };
    </script>
  </head>
  <body
    class="bg-[#0d1117] text-foreground antialiased selection:bg-primary/30"
  >
    <div class="min-h-screen w-full flex">
      <!-- Left Column: Branding Panel (Desktop Only) -->
      <div class="hidden lg:flex lg:w-1/2 h-screen sticky top-0">
        <div
          class="w-full h-full bg-[#080c10] border-r border-cyan-500/10 flex flex-col items-center justify-center relative overflow-hidden"
        >
          {/* Background Grid */}
          <div class="absolute inset-0 bg-[url('/grid.svg')] opacity-[0.03] pointer-events-none" />
          
          {/* Animated Gradient Orb */}
          <div class="absolute top-1/4 left-1/2 -translate-x-1/2 w-[500px] h-[500px] bg-cyan-500/10 rounded-full blur-[150px] animate-pulse" />
          <div class="absolute bottom-1/4 right-1/4 w-[300px] h-[300px] bg-primary/5 rounded-full blur-[100px]" />
          
          {/* Scanlines */}
          <div class="absolute inset-0 bg-scanline opacity-[0.02] pointer-events-none" />
          
          {/* HUD Frame Lines */}
          <div class="absolute top-8 left-8 w-24 h-px bg-linear-to-r from-cyan-500/50 to-transparent" />
          <div class="absolute top-8 left-8 h-24 w-px bg-linear-to-b from-cyan-500/50 to-transparent" />
          <div class="absolute bottom-8 right-8 w-24 h-px bg-linear-to-l from-cyan-500/50 to-transparent" />
          <div class="absolute bottom-8 right-8 h-24 w-px bg-linear-to-t from-cyan-500/50 to-transparent" />
          
          {/* Content */}
          <div class="relative z-10 flex flex-col items-center text-center px-12 space-y-8">
            {/* Logo */}
            <div class="relative group">
              <div class="absolute -inset-4 bg-cyan-500/20 blur-2xl opacity-50 group-hover:opacity-100 transition-opacity duration-700 rounded-full" />
              <div class="relative w-24 h-24 bg-[#0a0f14] border-2 border-cyan-500/30 flex items-center justify-center group-hover:border-cyan-500/60 transition-colors duration-500 rounded-lg overflow-hidden">
                <div class="absolute top-0 left-0 w-3 h-px bg-cyan-500" />
                <div class="absolute top-0 left-0 w-px h-3 bg-cyan-500" />
                <div class="absolute bottom-0 right-0 w-3 h-px bg-cyan-500" />
                <div class="absolute bottom-0 right-0 w-px h-3 bg-cyan-500" />
                <img src="/images/vigilio.png" alt="Vigilio Logo" class="w-16 h-16 object-contain" />
              </div>
            </div>
            
            {/* Title */}
            <div class="flex flex-col items-center space-y-2">
              <h1 class="text-4xl font-black text-white tracking-widest uppercase leading-none">
                YONATAN
              </h1>
              <span class="text-2xl font-bold text-cyan-500 tracking-[0.5em] uppercase leading-none">
                VIGILIO
              </span>
              <p class="text-cyan-500/60 text-xs font-mono uppercase tracking-[0.5em] mt-4">
                SECURE TERMINAL ACCESS
              </p>
            </div>
            
            {/* Decorative Stats */}
            <div class="flex items-center gap-8 mt-8 font-mono text-[10px] tracking-wider">
              <div class="flex flex-col items-center gap-1">
                <span class="text-cyan-500/40 uppercase">Encryption</span>
                <span class="text-cyan-500 font-bold">AES-256</span>
              </div>
              <div class="w-px h-8 bg-cyan-500/20" />
              <div class="flex flex-col items-center gap-1">
                <span class="text-cyan-500/40 uppercase">Protocol</span>
                <span class="text-green-500 font-bold">SECURE</span>
              </div>
              <div class="w-px h-8 bg-cyan-500/20" />
              <div class="flex flex-col items-center gap-1">
                <span class="text-cyan-500/40 uppercase">Uptime</span>
                <span class="text-white font-bold">99.9%</span>
              </div>
            </div>
            
            {/* Terminal Line */}
            <div class="mt-12 w-full max-w-md">
              <div class="bg-[#05080a] border border-cyan-500/20 p-4 font-mono text-xs text-cyan-500/70">
                <span class="text-cyan-500">$</span> Establishing secure connection<span class="animate-pulse">_</span>
              </div>
            </div>
          </div>
          
          {/* Bottom Info */}
          <div class="absolute bottom-8 left-0 right-0 flex justify-center">
            <p class="text-[9px] font-mono text-cyan-500/30 uppercase tracking-[0.4em]">
              NODE_SECURITY_GATEWAY_V2.4
            </p>
          </div>
        </div>
      </div>

      <!-- Right Column: Auth Form -->
      <div
        class="w-full lg:w-1/2 min-h-screen flex flex-col items-center justify-center p-6 md:p-12 bg-[#0d1117] relative"
      >
        <!-- Mobile Header (Visible on < lg) -->
        <div
          class="lg:hidden flex flex-col items-center gap-3 mb-8 animate-in fade-in slide-in-from-top-4 duration-700"
        >
          <div
            class="w-16 h-16 rounded-lg flex items-center justify-center overflow-hidden"
          >
            <img src="/images/vigilio.png" alt="Vigilio Logo" class="w-full h-full object-contain" />
          </div>
          <div class="flex flex-col items-center">
            <h1 class="text-base font-black tracking-widest text-white leading-none">
              YONATAN
            </h1>
            <span class="text-xs font-bold tracking-[0.2em] text-muted-foreground mt-1">
              VIGILIO
            </span>
          </div>
        </div>

        <!-- Form Container -->
        <div class="w-full max-w-md animate-in fade-in zoom-in-95 duration-500">
          <slot />
        </div>

        <!-- Footer -->
        <div class="mt-12 text-center">
          <p
            class="text-[10px] font-medium text-zinc-600 uppercase tracking-widest"
          >
            &copy; 2026 IntelliDoc AI â€¢ Enterprise Document Intelligence
          </p>
        </div>
      </div>
    </div>
  </body>
</html>
