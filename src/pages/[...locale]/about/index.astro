---
import { getLangFromUrl, useTranslations } from "../../../i18n";
import WebLayout from "../_components/layouts/web-layout/index.astro";
import type { WebAboutResponseDto } from "@modules/web/dtos/web.response.dto";
import AnimatedCounter from "../_components/animated-counter";
import {
  ShoppingCart,
  Cloud,
  FileText,
  GraduationCap,
  Bot,
  Sparkles,
  Terminal,
} from "lucide-preact";
import TypedMessage from "../_components/special/typed-message";
import { printFileWithDimension } from "@infrastructure/utils/hybrid/file.utils";
import { DIMENSION_IMAGE } from "@modules/uploads/const/upload.const";
import { Image } from "astro:assets";
import * as env from "astro:env/server";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const { title, description, technologies } = Astro.locals
  .props as WebAboutResponseDto;
const stats = [
  { value: "6+", label: t("home.experience") || "Years Exp." },
  { value: "50+", label: t("header.projects") || "Projects" },
  { value: "100%", label: "Commitment" },
];

const services = [
  {
    icon: Bot,
    title: t("about.service.ai_automation"),
    color: "text-cyan-400",
  },
  {
    icon: ShoppingCart,
    title: t("about.service.ecommerce"),
    color: "text-green-400",
  },
  { icon: Cloud, title: t("about.service.saas"), color: "text-blue-400" },
  {
    icon: FileText,
    title: t("about.service.invoicing"),
    color: "text-yellow-400",
  },
  {
    icon: GraduationCap,
    title: t("about.service.lms"),
    color: "text-purple-400",
  },
  { icon: Sparkles, title: t("about.service.more"), color: "text-orange-400" },
];
---

<WebLayout title={title} description={description}>
  <div
    class="relative min-h-screen container mx-auto px-4 py-20 flex flex-col gap-24"
  >
    {/* About Hero Section */}
    <section
      class="flex flex-col items-center text-center gap-6 animate-in fade-in slide-in-from-bottom-8 duration-1000"
    >
      <div
        class="relative w-32 h-32 md:w-40 md:h-40 mb-4 rounded-full border-2 border-primary/30 p-1"
      >
        <div
          class="w-full h-full rounded-full bg-zinc-900 flex items-center justify-center overflow-hidden"
        >
          <Image
            src={`${env.STORAGE_CDN_URL}/yoni.jpeg`}
            alt="Yonatan Vigilio Lavado"
            title="Yonatan Vigilio Lavado"
            width={128}
            height={128}
            class="w-full h-full object-covertONATNA vIGILIO lAVADO"
          />
        </div>
        {/* Orbiting effect */}
        <div
          class="absolute inset-0 rounded-full border border-primary/20 animate-[spin_10s_linear_infinite]"
        >
        </div>
      </div>
      <h1
        class="text-4xl md:text-6xl font-black tracking-tight text-white mb-2"
      >
        {t("about.hero.title")}<span class="text-primary">.</span>
      </h1>
      <p class="text-lg md:text-xl text-muted-foreground max-w-2xl font-light">
        {t("about.hero.subtitle")}
      </p>

      <div
        class="grid grid-cols-3 gap-8 mt-8 border-t border-white/10 pt-8 w-full max-w-2xl"
      >
        {
          stats.map((stat, index) => (
            <div class="flex flex-col items-center gap-3">
              <span class="text-4xl md:text-5xl font-black text-primary text-glow selection:bg-white selection:text-primary">
                <AnimatedCounter value={stat.value} client:visible />
              </span>
              <TypedMessage
                message={stat.label}
                delay={800 + index * 400}
                className="!relative !left-0 !translate-x-0"
                textClassName="text-[8px] md:text-[10px] !tracking-[0.3em] font-black opacity-80"
                typingSpeed={30}
              />
            </div>
          ))
        }
      </div>
    </section>

    {/* Services Section */}
    <section class="w-full max-w-5xl mx-auto">
      <h2 class="text-2xl font-bold mb-12 flex items-center gap-3 text-white">
        {t("about.services.title")}
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div class="space-y-6">
          <p class="text-lg text-muted-foreground leading-relaxed">
            {t("about.services.desc")}
          </p>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            {
              services.map((service) => (
                <div class="flex items-center gap-3 p-3 rounded-lg bg-zinc-900/50 border border-white/5 hover:border-primary/20 transition-colors">
                  <service.icon size={20} class={service.color} />
                  <span class="text-sm font-medium text-zinc-200">
                    {service.title}
                  </span>
                </div>
              ))
            }
          </div>
        </div>

        {/* Visual Abstract Service Representation */}
        <div
          class="relative aspect-video bg-gradient-to-br from-primary/5 to-transparent rounded-2xl border border-white/10 p-8 flex items-center justify-center overflow-hidden group"
        >
          <div class="absolute inset-0 bg-[url('/grid.svg')] opacity-10"></div>
          <div
            class="relative z-10 grid grid-cols-2 gap-4 transform group-hover:scale-105 transition-transform duration-700"
          >
            <div
              class="p-4 bg-zinc-950/80 rounded-lg border border-primary/20 shadow-glow backdrop-blur-sm"
            >
              <ShoppingCart size={24} class="text-green-400 mb-2" />
              <div class="h-2 w-16 bg-white/10 rounded mb-1"></div>
              <div class="h-2 w-10 bg-white/10 rounded"></div>
            </div>
            <div
              class="p-4 bg-zinc-950/80 rounded-lg border border-primary/20 shadow-glow backdrop-blur-sm mt-8"
            >
              <Cloud size={24} class="text-blue-400 mb-2" />
              <div class="h-2 w-16 bg-white/10 rounded mb-1"></div>
              <div class="h-2 w-10 bg-white/10 rounded"></div>
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* Technology Stack */}
    <section class="w-full max-w-6xl mx-auto">
      <div class="flex flex-col gap-4 mb-16">
        <h2
          class="text-3xl font-black tracking-tight text-white flex items-center gap-4"
        >
          <Terminal class="text-primary w-8 h-8" />
          {t("dashboard.sidebar.technologies")}
        </h2>
        <p class="text-muted-foreground font-light max-w-2xl">
          {t("skills.subtitle")}
        </p>
      </div>

      <div class="space-y-20">
        {
          [
            "LANGUAGE",
            "FRONTEND",
            "BACKEND",
            "DATABASE",
            "DEVOPS",
            "AI",
            "MOBILE",
          ].map((category) => {
            const categoryTechs = technologies?.filter(
              (tech) => tech.category === category,
            );
            if (!categoryTechs || categoryTechs.length === 0) return null;

            const categoryKey = category.toLowerCase();
            const categoryData = (t("skills.cat") as any)[categoryKey];

            return (
              <div class="space-y-8 animate-in fade-in slide-in-from-bottom-4 duration-700">
                <div class="flex items-center gap-6">
                  <div class="h-px flex-1 bg-linear-to-r from-transparent via-white/10 to-transparent" />
                  <div class="flex flex-col items-center gap-1">
                    {/* Label removed to avoid redundancy */}
                    <h3 class="text-xl font-bold text-white tracking-tight">
                      {categoryData?.title || category}
                    </h3>
                  </div>
                  <div class="h-px flex-1 bg-linear-to-r from-transparent via-white/10 to-transparent" />
                </div>

                <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4">
                  {categoryTechs.map((tech) => (
                    <div class="group relative p-px rounded-xl overflow-hidden transition-all duration-500 hover:-translate-y-1">
                      {/* Technical Border/Background */}
                      <div class="absolute inset-0 bg-linear-to-b from-white/10 to-transparent opacity-50 group-hover:from-primary/40 group-hover:to-primary/5 transition-colors duration-500" />

                      {/* Recursive Corner Accents */}
                      <div class="absolute top-0 left-0 w-2 h-2 border-t border-l border-white/20 group-hover:border-primary/60" />
                      <div class="absolute top-0 right-0 w-2 h-2 border-t border-r border-white/20 group-hover:border-primary/60" />
                      <div class="absolute bottom-0 left-0 w-2 h-2 border-b border-l border-white/20 group-hover:border-primary/60" />
                      <div class="absolute bottom-0 right-0 w-2 h-2 border-b border-r border-white/20 group-hover:border-primary/60" />

                      <div class="relative bg-zinc-950/80 backdrop-blur-sm p-6 flex flex-col items-center justify-center gap-4 group-hover:bg-zinc-900/40 transition-all duration-500">
                        <div class="relative">
                          {/* Glow background for icon */}
                          <div class="absolute inset-0 bg-primary/20 blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 rounded-full" />

                          <div class="relative z-10 w-12 h-12 flex items-center justify-center rounded-lg bg-zinc-900 border border-white/5 group-hover:border-primary/30 transition-all duration-500 shadow-inner">
                            {tech.icon && tech.icon.length > 0 ? (
                              <Image
                                src={
                                  printFileWithDimension(
                                    tech.icon,
                                    DIMENSION_IMAGE.xs,
                                    env.STORAGE_CDN_URL,
                                  )[0]
                                }
                                alt={tech.name}
                                width={DIMENSION_IMAGE.xs}
                                height={DIMENSION_IMAGE.xs}
                                title={tech.name}
                                class="w-8 h-8 object-contain transition-transform duration-500 group-hover:scale-110"
                              />
                            ) : (
                              <div class="text-lg font-black text-muted-foreground group-hover:text-primary transition-colors duration-500">
                                {tech.name.charAt(0)}
                              </div>
                            )}
                          </div>
                        </div>

                        <div class="flex flex-col items-center gap-1">
                          <span class="text-sm font-bold text-zinc-300 group-hover:text-white transition-colors duration-300">
                            {tech.name}
                          </span>
                          <div class="flex items-center gap-1.5 opacity-0 group-hover:opacity-100 transition-all duration-500 -translate-y-1 group-hover:translate-y-0">
                            <div class="w-1 h-1 rounded-full bg-primary" />
                            <span class="text-[9px] font-mono uppercase tracking-widest text-primary/80">
                              Verified
                            </span>
                          </div>
                        </div>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            );
          })
        }
      </div>
    </section>
  </div>
</WebLayout>
