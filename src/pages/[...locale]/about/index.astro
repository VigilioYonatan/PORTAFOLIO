---
import { getLangFromUrl, useTranslations } from "../../../i18n";
import WebLayout from "../_components/layouts/web-layout/index.astro";
import type { WebAboutResponseDto } from "@modules/web/dtos/web.response.dto";
import {
  ShoppingCart,
  Cloud,
  FileText,
  GraduationCap,
  Bot,
  Sparkles,
  Terminal,
} from "lucide-preact";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const { title, description, technologies } = Astro.locals
  .props as WebAboutResponseDto;

const stats = [
  { value: "5+", label: t("home.experience") || "Years Exp." },
  { value: "50+", label: t("header.projects") || "Projects" },
  { value: "100%", label: "Commitment" },
];

const services = [
  {
    icon: Bot,
    title: t("about.service.ai_automation"),
    color: "text-cyan-400",
  },
  {
    icon: ShoppingCart,
    title: t("about.service.ecommerce"),
    color: "text-green-400",
  },
  { icon: Cloud, title: t("about.service.saas"), color: "text-blue-400" },
  {
    icon: FileText,
    title: t("about.service.invoicing"),
    color: "text-yellow-400",
  },
  {
    icon: GraduationCap,
    title: t("about.service.lms"),
    color: "text-purple-400",
  },
  { icon: Sparkles, title: t("about.service.more"), color: "text-orange-400" },
];
---

<WebLayout title={title} description={description}>
  <div
    class="relative min-h-screen container mx-auto px-4 py-20 flex flex-col gap-24"
  >
    {/* About Hero Section */}
    <section
      class="flex flex-col items-center text-center gap-6 animate-in fade-in slide-in-from-bottom-8 duration-1000"
    >
      <div
        class="relative w-32 h-32 md:w-40 md:h-40 mb-4 rounded-full border-2 border-primary/30 p-1"
      >
        <div
          class="w-full h-full rounded-full bg-zinc-900 flex items-center justify-center overflow-hidden"
        >
          <Terminal size={48} class="text-primary" />
        </div>
        {/* Orbiting effect */}
        <div
          class="absolute inset-0 rounded-full border border-primary/20 animate-[spin_10s_linear_infinite]"
        >
        </div>
      </div>

      <h1
        class="text-4xl md:text-6xl font-black tracking-tight text-white mb-2"
      >
        {t("about.hero.title")}<span class="text-primary">.</span>
      </h1>
      <p class="text-lg md:text-xl text-muted-foreground max-w-2xl font-light">
        {t("about.hero.subtitle")}
      </p>

      <div
        class="grid grid-cols-3 gap-8 mt-8 border-t border-white/10 pt-8 w-full max-w-2xl"
      >
        {
          stats.map((stat) => (
            <div class="flex flex-col items-center">
              <span class="text-3xl font-bold text-white mb-1">
                {stat.value}
              </span>
              <span class="text-xs uppercase tracking-widest text-muted-foreground">
                {stat.label}
              </span>
            </div>
          ))
        }
      </div>
    </section>

    {/* Services Section */}
    <section class="w-full max-w-5xl mx-auto">
      <h2 class="text-2xl font-bold mb-12 flex items-center gap-3 text-white">
        <span class="text-primary font-mono">01.</span>
        {t("about.services.title")}
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div class="space-y-6">
          <p class="text-lg text-muted-foreground leading-relaxed">
            {t("about.services.desc")}
          </p>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            {
              services.map((service) => (
                <div class="flex items-center gap-3 p-3 rounded-lg bg-zinc-900/50 border border-white/5 hover:border-primary/20 transition-colors">
                  <service.icon size={20} class={service.color} />
                  <span class="text-sm font-medium text-zinc-200">
                    {service.title}
                  </span>
                </div>
              ))
            }
          </div>
        </div>

        {/* Visual Abstract Service Representation */}
        <div
          class="relative aspect-video bg-gradient-to-br from-primary/5 to-transparent rounded-2xl border border-white/10 p-8 flex items-center justify-center overflow-hidden group"
        >
          <div class="absolute inset-0 bg-[url('/grid.svg')] opacity-10"></div>
          <div
            class="relative z-10 grid grid-cols-2 gap-4 transform group-hover:scale-105 transition-transform duration-700"
          >
            <div
              class="p-4 bg-zinc-950/80 rounded-lg border border-primary/20 shadow-glow backdrop-blur-sm"
            >
              <ShoppingCart size={24} class="text-green-400 mb-2" />
              <div class="h-2 w-16 bg-white/10 rounded mb-1"></div>
              <div class="h-2 w-10 bg-white/10 rounded"></div>
            </div>
            <div
              class="p-4 bg-zinc-950/80 rounded-lg border border-primary/20 shadow-glow backdrop-blur-sm mt-8"
            >
              <Cloud size={24} class="text-blue-400 mb-2" />
              <div class="h-2 w-16 bg-white/10 rounded mb-1"></div>
              <div class="h-2 w-10 bg-white/10 rounded"></div>
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* Technology Stack */}
    <section class="w-full max-w-5xl mx-auto">
      <h2 class="text-2xl font-bold mb-8 flex items-center gap-3 text-white">
        <span class="text-primary font-mono">02.</span>
        {t("dashboard.sidebar.technologies")}
      </h2>
      <div
        class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4"
      >
        {
          technologies?.map((tech) => (
            <div class="group flex flex-col items-center justify-center gap-3 p-6 rounded-xl bg-zinc-900/30 border border-white/5 hover:border-primary/30 hover:bg-zinc-900/80 transition-all duration-300 hover:-translate-y-1">
              <div class="p-3 rounded-lg overflow-hidden relative">
                <div class="absolute inset-0 opacity-0 group-hover:opacity-20 transition-opacity bg-primary" />
                {tech.icon?.[0] ? (
                  <img
                    src={tech.icon[0].key}
                    alt={tech.name}
                    class="w-8 h-8 object-contain"
                  />
                ) : (
                  <div class="w-8 h-8 bg-zinc-800 rounded flex items-center justify-center text-xs text-muted-foreground">
                    {tech.name.charAt(0)}
                  </div>
                )}
              </div>
              <span class="text-xs font-mono text-muted-foreground group-hover:text-white transition-colors">
                {tech.name}
              </span>
            </div>
          ))
        }
      </div>
    </section>
  </div>
</WebLayout>
