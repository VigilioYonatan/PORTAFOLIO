---
import type { WebOpenSourceSlugResponseDto } from "@modules/web/dtos/web.response.dto";
import FuturisticMDX from "@modules/blog-post/components/futuristic-mdx";
import { getLangFromUrl, useTranslations } from "@src/i18n";
import {
  ExternalLink,
  LucideGithub,
  Package,
  Activity,
  Star,
  Download,
} from "lucide-preact";

import WebLayout from "../_components/layouts/web-layout/index.astro";
import { cn } from "@infrastructure/utils/client";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const { open_source, title, description } = Astro.locals
  .props as WebOpenSourceSlugResponseDto;
---

<WebLayout
  title={title}
  description={description}
  translations={Astro.locals.props.translations}
>
  <main class="relative py-24 px-4 min-h-screen overflow-x-hidden">
    {/* Cinematic Background */}
    <div
      class="absolute inset-0 bg-scanline opacity-[0.03] pointer-events-none -z-10"
    >
    </div>
    <div
      class="absolute inset-0 opacity-[0.02] pointer-events-none -z-10"
      style={{
        backgroundImage:
          "linear-gradient(rgba(6,182,212,0.2) 1px, transparent 1px), linear-gradient(90deg, rgba(6,182,212,0.2) 1px, transparent 1px)",
        backgroundSize: "60px 60px",
      }}
    >
    </div>
    <div
      class="absolute top-0 left-0 w-full h-[800px] bg-linear-to-b from-primary/10 via-primary/5 to-transparent pointer-events-none -z-10"
    >
    </div>
    <div
      class="absolute top-[-20%] right-[-10%] w-[60%] h-[60%] bg-[radial-gradient(circle,rgba(6,182,212,0.1),transparent_70%)] blur-[120px] rounded-full pointer-events-none -z-10"
    >
    </div>

    <div class="container mx-auto max-w-6xl relative z-10">
      {/* High-Tech Breadcrumbs */}
      <nav
        class="flex items-center gap-6 text-[10px] font-bold font-mono uppercase tracking-[0.5em] mb-20 px-6 py-3 bg-zinc-950/40 border border-white/5 w-fit backdrop-blur-xl animate-in fade-in slide-in-from-left-4 duration-700"
      >
        <a
          href={`/${lang}/open-source`}
          class="text-white/40 hover:text-primary transition-colors flex items-center gap-2 group/breadcrumb"
        >
          <span
            class="text-primary/40 group-hover/breadcrumb:text-primary transition-colors"
            >[</span
          >
          {t("opensource.title")}
          <span
            class="text-primary/40 group-hover/breadcrumb:text-primary transition-colors"
            >]</span
          >
        </a>
        <span class="text-primary/20">/</span>
        <span class="text-primary text-glow animate-pulse"
          >{open_source.name}</span
        >
      </nav>

      <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 lg:gap-24 mb-32">
        <div class="lg:col-span-8">
          <header
            class="space-y-12 animate-in fade-in slide-in-from-bottom-12 duration-1000"
          >
            <div class="flex flex-col md:flex-row md:items-center gap-10">
              <div class="relative group">
                <div
                  class="absolute -inset-10 bg-primary/20 blur-[100px] opacity-20 group-hover:opacity-60 transition-opacity duration-1000"
                >
                </div>
                <div
                  class="relative p-12 bg-zinc-950/50 backdrop-blur-md border border-white/10 rounded-none group-hover:border-primary/40 transition-all duration-700 shadow-[0_0_60px_rgba(6,182,212,0.1)] flex items-center justify-center"
                >
                  {/* HUD Frame Elements */}
                  <div
                    class="absolute top-0 left-0 w-8 h-px bg-primary/40 group-hover:w-12 group-hover:bg-primary transition-all duration-500"
                  >
                  </div>
                  <div
                    class="absolute top-0 left-0 w-px h-8 bg-primary/40 group-hover:h-12 group-hover:bg-primary transition-all duration-500"
                  >
                  </div>
                  <div
                    class="absolute bottom-0 right-0 w-8 h-px bg-primary/40 group-hover:w-12 group-hover:bg-primary transition-all duration-500"
                  >
                  </div>
                  <div
                    class="absolute bottom-0 right-0 w-px h-8 bg-primary/40 group-hover:h-12 group-hover:bg-primary transition-all duration-500"
                  >
                  </div>

                  <Package
                    className="text-primary/60 group-hover:text-primary group-hover:scale-110 group-hover:rotate-12 transition-all duration-700"
                    size={56}
                    strokeWidth={1}
                  />
                </div>
              </div>

              <div class="space-y-6">
                <div class="flex items-center gap-4">
                  <div class="flex gap-1">
                    <div
                      class="w-1.5 h-1.5 bg-primary rounded-full animate-ping"
                    >
                    </div>
                    <div class="w-1.5 h-1.5 bg-primary/20 rounded-full"></div>
                  </div>
                  <span
                    class="text-[10px] text-primary font-black tracking-[0.4em] uppercase"
                  >
                    Release_STABLE_V{open_source.version || "1.0"}
                  </span>
                  <div
                    class="h-px w-20 bg-linear-to-r from-primary/30 to-transparent hidden md:block"
                  >
                  </div>
                </div>
                <h1
                  class="text-2xl md:text-3xl lg:text-4xl font-black text-white tracking-tighter uppercase italic leading-[0.85] drop-shadow-[0_0_30px_rgba(255,255,255,0.1)]"
                >
                  {open_source.name}
                </h1>
                <div class="flex items-center gap-10 font-mono">
                  <div class="flex flex-col gap-2">
                    <span
                      class="text-[8px] text-white/20 uppercase tracking-[0.5em]"
                      >Architecture</span
                    >
                    <div class="flex items-center gap-2">
                      <div class="w-1.5 h-1.5 bg-primary/40"></div>
                      <span
                        class="text-xs text-primary font-bold tracking-widest"
                        >NODE_V8_TURBO</span
                      >
                    </div>
                  </div>
                  <div class="w-px h-10 bg-white/5"></div>
                  <div class="flex flex-col gap-2">
                    <span
                      class="text-[8px] text-white/20 uppercase tracking-[0.5em]"
                      >Repository</span
                    >
                    <span
                      class="text-xs text-white/60 font-medium tracking-widest uppercase italic"
                      >GitHub_Public</span
                    >
                  </div>
                </div>
              </div>
            </div>

            <div class="relative py-10 md:py-16">
              <div
                class="absolute top-0 left-0 w-1.5 h-full bg-linear-to-b from-primary via-primary/50 to-transparent"
              >
              </div>
              <p
                class="text-xl md:text-3xl text-zinc-300 leading-relaxed max-w-4xl pl-10 md:pl-16 font-light italic opacity-90"
              >
                {open_source.description}
              </p>
              {/* Decorative floating bits */}
              <div
                class="absolute left-[-2px] top-0 w-2 h-2 bg-primary shadow-[0_0_15px_rgba(6,182,212,1)]"
              >
              </div>
            </div>

            <div class="flex flex-wrap gap-6 pt-10">
              {
                open_source.npm_url && (
                  <a
                    href={open_source.npm_url}
                    target="_blank"
                    class="group relative flex items-center gap-8 bg-primary/5 border border-primary/20 px-10 py-5 text-[10px] font-black uppercase tracking-[0.6em] transition-all hover:bg-primary/10 hover:border-primary/50 hover:shadow-[0_0_50px_rgba(6,182,212,0.15)] rounded-none"
                    title={`View ${open_source.name} on NPM Registry`}
                  >
                    <ExternalLink
                      size={18}
                      class="text-primary group-hover:scale-110 group-hover:translate-x-1 group-hover:-translate-y-1 transition-all"
                    />
                    <span class="text-white group-hover:text-glow transition-all">
                      NPM_Registry_Core
                    </span>
                    {/* Corner accent */}
                    <div class="absolute top-0 right-0 w-2 h-2 border-t border-r border-primary/40" />
                  </a>
                )
              }
              {
                open_source.repo_url && (
                  <a
                    href={open_source.repo_url}
                    target="_blank"
                    class="group relative flex items-center gap-8 bg-zinc-950/50 border border-white/5 px-10 py-5 text-[10px] font-black uppercase tracking-[0.6em] transition-all hover:border-primary/30 hover:bg-zinc-900 shadow-xl rounded-none"
                    title={`View ${open_source.name} Source on GitHub`}
                  >
                    <LucideGithub
                      size={18}
                      class="text-white/40 group-hover:text-primary transition-colors"
                    />

                    <span class="text-white/40 group-hover:text-white transition-colors">
                      Source_Repository
                    </span>
                  </a>
                )
              }
            </div>
          </header>
        </div>

        <aside
          class="lg:col-span-4 animate-in fade-in slide-in-from-right-12 duration-1400 delay-500"
        >
          <div class="sticky top-32 space-y-10">
            <div
              class="relative bg-zinc-900/10 backdrop-blur-3xl border border-white/5 p-12 shadow-2xl overflow-hidden group"
            >
              {/* HUD Frame details */}
              <div
                class="absolute top-0 left-0 w-full h-px bg-linear-to-r from-transparent via-primary/20 to-transparent"
              >
              </div>
              <div
                class="absolute bottom-0 left-0 w-full h-px bg-linear-to-r from-transparent via-primary/20 to-transparent"
              >
              </div>

              <div class="flex items-center justify-between mb-16">
                <div class="flex items-center gap-4">
                  <div class="relative">
                    <Activity
                      className="text-primary animate-pulse"
                      size={18}
                    />
                    <div
                      class="absolute inset-0 bg-primary/20 blur-md animate-pulse"
                    >
                    </div>
                  </div>
                  <h2
                    class="text-xs font-black text-white uppercase tracking-[0.5em]"
                  >
                    Core_Analytics
                  </h2>
                </div>
                <span
                  class="font-mono text-[7px] text-primary/30 tracking-[0.4em] px-2 py-1 border border-primary/10"
                  >ST_ID_{open_source.id.toString().padStart(4, "0")}</span
                >
              </div>

              <div class="space-y-14">
                <div class="space-y-5 group/stat">
                  <div class="flex justify-between items-end">
                    <div class="flex flex-col gap-1">
                      <span
                        class="text-[8px] text-white/30 uppercase tracking-widest group-hover/stat:text-primary transition-colors"
                        >Stars_Inbound</span
                      >
                      <div class="flex items-center gap-2">
                        <Star
                          size={12}
                          className="text-primary animate-pulse"
                        />
                        <span
                          class="text-primary font-black text-3xl group-hover:text-glow transition-all"
                        >
                          {open_source.stars}
                        </span>
                      </div>
                    </div>
                  </div>
                  <div class="h-1 bg-white/5 w-full relative">
                    <div
                      class="h-full bg-primary shadow-[0_0_20px_rgba(6,182,212,1)] transition-all duration-2000 ease-out-expo scale-x-0 origin-left group-hover:scale-x-100"
                      style={`width: ${Math.min((open_source.stars / 1000) * 100, 100)}%`}
                    >
                    </div>
                  </div>
                </div>

                <div class="space-y-5 group/stat">
                  <div class="flex justify-between items-end">
                    <div class="flex flex-col gap-1">
                      <span
                        class="text-[8px] text-white/30 uppercase tracking-widest group-hover/stat:text-emerald-400 transition-colors"
                        >Loads_Registry</span
                      >
                      <div class="flex items-center gap-2">
                        <Download
                          size={12}
                          className="text-emerald-500 group-hover:animate-bounce"
                        />
                        <span class="text-emerald-500 font-black text-3xl">
                          {open_source.downloads.toLocaleString()}
                        </span>
                      </div>
                    </div>
                  </div>
                  <div class="h-1 bg-white/5 w-full relative">
                    <div
                      class="h-full bg-emerald-500 shadow-[0_0_20px_rgba(34,197,94,1)] transition-all duration-2500 ease-out-expo scale-x-0 origin-left group-hover:scale-x-100"
                      style={`width: ${Math.min((open_source.downloads / 500000) * 100, 100)}%`}
                    >
                    </div>
                  </div>
                </div>

                <div class="pt-12 border-t border-white/5 space-y-6">
                  {
                    [
                      {
                        label: "Category",
                        value: open_source.category || "Development",
                        color: "text-zinc-100",
                      },
                      {
                        label: "License",
                        value: "MIT_OPEN_HARDENED",
                        color: "text-zinc-100",
                      },
                      {
                        label: "Uptime",
                        value: "99.982%",
                        color: "text-emerald-500",
                      },
                      {
                        label: "Security",
                        value: "VETTING_OK",
                        color: "text-primary",
                      },
                    ].map((item) => (
                      <div class="flex justify-between items-center group/item hover:translate-x-1 transition-all duration-300">
                        <span class="text-[8px] text-white/20 uppercase tracking-[.3em] group-hover/item:text-primary transition-colors italic">
                          {item.label}
                        </span>
                        <span
                          class={cn(
                            "text-xs font-bold tracking-tight uppercase",
                            item.color,
                          )}
                        >
                          {item.value}
                        </span>
                      </div>
                    ))
                  }
                </div>
              </div>
            </div>

            {/* Sub-aside info */}
            <div
              class="p-8 border-l border-primary/20 bg-primary/5 space-y-4 font-mono"
            >
              <span
                class="text-[9px] text-primary block uppercase tracking-[0.3em] font-bold"
                >Encryption_Notice</span
              >
              <p class="text-[10px] text-white/50 leading-relaxed uppercase">
                All modules indexed in this terminal are vetted for
                high-performance and security compliance.
              </p>
            </div>
          </div>
        </aside>
      </div>

      {
        open_source.content && (
          <section class="relative animate-in fade-in slide-in-from-bottom-12 duration-1000">
            <div class="flex items-center gap-6 mb-12">
              <div class="h-[2px] w-20 bg-primary" />
              <h3 class="text-xs font-black text-primary uppercase tracking-[0.6em]">
                System_Documentation
              </h3>
              <div class="h-px flex-1 bg-linear-to-r from-primary/30 to-transparent" />
            </div>

            <div class="bg-zinc-950/50 border border-white/10 p-10 md:p-24 rounded-none backdrop-blur-2xl relative overflow-hidden group ring-1 ring-white/5">
              {/* HUD Decoration */}
              <div class="absolute top-0 right-0 w-64 h-64 bg-primary/5 opacity-40 -translate-y-1/2 translate-x-1/2 rounded-full blur-[120px] pointer-events-none" />
              <div class="absolute bottom-0 left-0 w-32 h-px bg-linear-to-r from-transparent via-primary/40 to-transparent" />

              <div class="prose prose-invert max-w-none">
                <FuturisticMDX content={open_source.content} client:visible />
              </div>
            </div>

            {/* End of doc marker */}
            <div class="mt-16 flex flex-col items-center gap-6 opacity-30">
              <div class="w-px h-24 bg-linear-to-b from-primary to-transparent" />
              <span class="text-[9px] font-mono tracking-[1em] uppercase -mr-[1em]">
                END_OF_TRANSMISSION
              </span>
            </div>
          </section>
        )
      }
    </div>
  </main>
</WebLayout>
