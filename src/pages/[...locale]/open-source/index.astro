---
import WebLayout from "../_components/layouts/web-layout/index.astro";
import { getLangFromUrl, useTranslations } from "../../../i18n";
import type { WebOpenSourceResponseDto } from "@modules/web/dtos/web.response.dto";
import SsrPagination from "@components/extras/ssr-pagination.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const { open_sources, title, page, limit, total } = Astro.locals.props as WebOpenSourceResponseDto;
---

<WebLayout title={title}>
  <main class="relative flex flex-col items-center pb-24 pt-12 md:pt-20 min-h-screen overflow-x-hidden">
    {/* 1. Global Background Effects */}
    <div class="absolute inset-0 bg-scanline opacity-[0.02] pointer-events-none -z-10" />
    <div 
      class="absolute inset-0 opacity-[0.03] pointer-events-none -z-10"
      style={{
        backgroundImage: "linear-gradient(rgba(6,182,212,0.2) 1px, transparent 1px), linear-gradient(90deg, rgba(6,182,212,0.2) 1px, transparent 1px)",
        backgroundSize: "40px 40px"
      }}
    />

    {/* Atmospheric Glows */}
    <div class="absolute top-0 right-[-10%] w-[60%] h-[50%] bg-[radial-gradient(circle,rgba(6,182,212,0.15)_0%,transparent_70%)] blur-[120px] pointer-events-none -z-10 rounded-full animate-pulse-slow" />
    <div class="absolute bottom-[-10%] left-[-10%] w-[50%] h-[50%] bg-[radial-gradient(circle,rgba(59,130,246,0.1)_0%,transparent_70%)] blur-[100px] pointer-events-none -z-10 rounded-full" />
    
    <div class="container mx-auto px-4 relative z-10">
      {/* Header Section */}
      <header class="mb-20 md:mb-32 animate-in fade-in slide-in-from-top-12 duration-1000">
        <div class="flex flex-col lg:flex-row lg:items-end justify-between gap-12 border-b border-primary/20 pb-16 relative">
          {/* Corner accents */}
          <div class="absolute bottom-0 left-0 w-12 h-1 bg-primary transform translate-y-1/2" />
          
          <div class="max-w-3xl space-y-8">
            <div class="flex items-center gap-4">
              <div class="flex gap-1">
                <div class="w-1.5 h-1.5 bg-primary rounded-full animate-ping" />
                <div class="w-1.5 h-1.5 bg-primary/40 rounded-full" />
                <div class="w-1.5 h-1.5 bg-primary/20 rounded-full" />
              </div>
              <span class="text-[10px] text-primary tracking-[0.6em] uppercase font-mono">
                System.Archive.OpenSource
              </span>
            </div>
            
            <div class="space-y-2">
              <h1 class="text-7xl md:text-9xl font-black text-white tracking-tighter uppercase italic leading-none group flex flex-wrap gap-x-6">
                <span class="relative">Open</span> 
                <span class="text-primary text-glow drop-shadow-[0_0_15px_rgba(6,182,212,0.4)] group-hover:drop-shadow-[0_0_25px_rgba(6,182,212,0.6)] transition-all duration-700">Source</span>
              </h1>
            </div>
            
            <p class="text-muted-foreground font-mono text-base md:text-lg tracking-wide max-w-2xl border-l-4 border-primary/30 pl-8 leading-relaxed italic">
              {t("opensource.subtitle")}
            </p>
          </div>
          
          {/* System Telemetry Mock */}
          <div class="flex flex-col gap-6 font-mono text-[10px] min-w-[280px]">
            <div class="bg-zinc-950/80 backdrop-blur-md border border-primary/20 p-5 space-y-4 shadow-[0_0_30px_rgba(6,182,212,0.05)] relative overflow-hidden">
              <div class="absolute top-0 right-0 p-1">
                <div class="w-1.5 h-1.5 bg-primary/20 rounded-full animate-pulse" />
              </div>
              
              <div class="flex justify-between items-center opacity-70">
                <span class="uppercase tracking-widest flex items-center gap-2">
                  <span class="w-1 h-1 bg-primary rounded-full" />
                  Modules_Registry
                </span>
                <span class="text-white font-bold">{total.toString().padStart(3, '0')}</span>
              </div>

              <div class="flex justify-between items-center">
                <span class="uppercase tracking-widest text-primary flex items-center gap-2">
                  <span class="w-1 h-3 bg-primary" />
                  Terminal_Sync
                </span>
                <span class="text-emerald-400 font-bold animate-pulse">ESTABLISHED</span>
              </div>

              <div class="space-y-2">
                <div class="flex justify-between text-[8px] opacity-50">
                  <span class="flex gap-1">
                    {[1, 2, 3, 4, 5].map(_ => <span class="w-1 h-1 bg-primary/40" />)}
                  </span>
                  <span>SYNC_LVL_04</span>
                </div>
                <div class="w-full h-1 bg-white/5 relative">
                  <div class="absolute inset-0 bg-primary/10" />
                  <div class="h-full bg-primary shadow-[0_0_10px_rgba(6,182,212,0.5)] animate-[width_3s_ease-in-out_infinite] w-[86%]" />
                </div>
              </div>

              <div class="pt-2 border-t border-white/5 flex gap-4 text-[8px] opacity-40 uppercase">
                <span class="animate-pulse">Buffer: OK</span>
                <span class="animate-pulse delay-75">Cache: HIT</span>
                <span class="animate-pulse delay-150">Lat: 0.04ms</span>
              </div>
            </div>
            
            <div class="flex items-center gap-3 opacity-40 group hover:opacity-100 transition-opacity">
               <div class="w-3 h-3 border border-primary/50 group-hover:rotate-90 group-hover:border-primary transition-all duration-500" />
               <span class="uppercase tracking-[0.3em] text-[8px]">Ready_for_deployment_v4.2</span>
            </div>
          </div>
        </div>
      </header>

      {/* Grid Section */}
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 mb-20">
        {open_sources.map((project, index) => (
          <a 
            href={`/${lang}/open-source/${project.slug}`} 
            class="group relative flex flex-col p-8 bg-zinc-950/20 backdrop-blur-xs border border-white/5 hover:border-primary/40 hover:bg-zinc-950/40 transition-all duration-500 animate-in fade-in slide-in-from-bottom-16 duration-1000 fill-mode-both"
            style={`animation-delay: ${index * 150}ms;`}
            aria-label={`${t("opensource.view_details")} ${project.name}`}
          >
            {/* HUD Corner Decorations */}
            <div class="absolute top-0 left-0 w-8 h-8 border-t border-l border-primary/0 group-hover:border-primary/60 group-hover:-translate-x-1 group-hover:-translate-y-1 transition-all duration-500 pointer-events-none" />
            <div class="absolute bottom-0 right-0 w-8 h-8 border-b border-r border-primary/0 group-hover:border-primary/60 group-hover:translate-x-1 group-hover:translate-y-1 transition-all duration-500 pointer-events-none" />
            
            {/* Inner frame highlighting */}
            <div class="absolute inset-px border border-white/0 group-hover:border-white/5 transition-all duration-700 pointer-events-none" />

            {/* Dynamic Hover Glow */}
            <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_0%,rgba(6,182,212,0.05),transparent_70%)] opacity-0 group-hover:opacity-100 transition-opacity duration-700 pointer-events-none" />
            
            {/* Scanline effect */}
            <div class="absolute inset-0 bg-scanline opacity-[0.02] pointer-events-none group-hover:opacity-[0.05] transition-opacity" />

            {/* Card Content */}
            <div class="relative z-10 flex-1 flex flex-col">
              <div class="flex justify-between items-start mb-10">
                <div class="flex flex-col gap-1.5">
                  <div class="flex items-center gap-2">
                    <div class="w-1 h-1 bg-primary rounded-full" />
                    <span class="text-[9px] font-mono text-primary uppercase tracking-[0.4em]">
                      Build_{project.version || "1.0"}
                    </span>
                  </div>
                  <div class="h-px w-8 bg-primary/20 group-hover:w-16 transition-all duration-700" />
                </div>
                
                <div class="flex gap-4">
                  <div class="flex flex-col items-end">
                    <span class="text-[7px] font-mono text-white/20 uppercase tracking-[0.3em] mb-1">Stars</span>
                    <span class="text-[11px] font-mono text-primary/80 group-hover:text-primary group-hover:text-glow transition-all">
                      {project.stars}
                    </span>
                  </div>
                  <div class="w-px h-6 bg-white/5" />
                  <div class="flex flex-col items-end">
                    <span class="text-[7px] font-mono text-white/20 uppercase tracking-[0.3em] mb-1">Loads</span>
                    <span class="text-[11px] font-mono text-white/60">
                      {project.downloads >= 1000 ? `${(project.downloads / 1000).toFixed(1)}k` : project.downloads}
                    </span>
                  </div>
                </div>
              </div>

              <h2 class="text-3xl font-black mb-4 text-white group-hover:text-primary transition-all tracking-tighter uppercase italic leading-none drop-shadow-sm">
                {project.name}
              </h2>
              
              <p class="text-zinc-500 text-sm font-mono leading-relaxed mb-8 group-hover:text-zinc-400 transition-colors line-clamp-3">
                {project.description}
              </p>

              <div class="mt-auto pt-6 border-t border-white/10 flex items-center justify-between">
                <div class="flex items-center gap-2 text-xs font-black text-primary uppercase tracking-[0.3em] group-hover:gap-4 transition-all duration-500">
                    {t("opensource.view_details")} 
                    <span class="text-lg opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-500">Â»</span>
                </div>
                
                <div class="relative group/tag">
                  <div class="absolute inset-0 bg-primary/10 opacity-0 group-hover:opacity-100 blur transition-opacity" />
                  <span class="relative text-[8px] font-mono text-white/30 uppercase tracking-[0.2em] px-3 py-1.5 bg-zinc-900 border border-white/5 group-hover:border-primary/40 group-hover:text-white transition-all">
                    {project.category || "Module"}
                  </span>
                </div>
              </div>
            </div>
            
            {/* Hover bottom bar */}
            <div class="absolute bottom-0 left-0 w-full h-[2px] bg-linear-to-r from-transparent via-primary to-transparent scale-x-0 group-hover:scale-x-100 transition-transform duration-700" />
          </a>
        ))}

        {open_sources.length === 0 && (
           <div class="col-span-full py-48 text-center bg-zinc-950/20 border-2 border-dashed border-white/5">
             <div class="inline-flex flex-col items-center">
                <div class="w-16 h-16 border-2 border-primary/20 flex items-center justify-center mb-8 relative">
                   <div class="absolute inset-0 bg-primary/10 animate-pulse" />
                   <span class="text-primary text-2xl font-black">!</span>
                </div>
                <h3 class="text-white font-mono text-lg uppercase tracking-[0.4em] mb-4">No_Modules_Detected</h3>
                <p class="text-muted-foreground font-mono text-sm uppercase tracking-widest opacity-50">Archive system ready for first injection.</p>
             </div>
           </div>
        )}
      </div>

      <div class="flex justify-center mt-12 animate-in fade-in duration-1000 delay-500">
        <SsrPagination
          page={page}
          limit={limit}
          total={total}
          baseUrl={`/${lang}/open-source`}
        />
      </div>
    </div>
  </main>
</WebLayout>
